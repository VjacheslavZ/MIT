doctype html
html(class="no-js" lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport', content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
        meta(http-equiv='X-UA-Compatible', content='ie=edge')
        title
            block title

        style(type='text/css').
            html .loader {
                background: #fff;
                z-index: 9999;
                position: fixed;
                bottom: 0;
                left: 0;
                right: 0;
                top: 0;
                width: 100%;
                height: 100%;
            }

            html .loader .loader_inner {
                background-size: cover;
                background-position: center center;
                background-repeat: no-repeat;
                background-color: #fff;
                height: 200px;
                width: 200px;
                margin-top: -100px;
                margin-left: -100px;
                left: 50%;
                top: 50%;
                position: absolute
            }

        script(src='js/libs.min.js')
        script(src='js/common.js')

    body
        div#my-page
            div
                .loader
                    .loader_inner
                        include ../img/preloader.svg

            block modal
                include modal

            a(href="#my-menu").hamburger.hamburger--collapse
                span.hamburger-box
                    span.hamburger-inner

            header#my-header.header
                    //.container
                    .header__wrap
                        .header__main
                            .header__logo
                                a(href="/" class="logo" title="MIT").
                                    MIT
                            nav.header__nav
                                ul
                                    //-var links = [{title:'About us', href:'#'},{title:'Reservation', href:'#'},{title:'Gallery', href:'#'},{title:'', href:"index.html"},{title:'Blog', href:'#'}, {title:'Elements', href:'#'}, {title:'shop', href:'#'}];
